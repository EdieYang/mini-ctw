.title_cover {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 690rpx;
  margin-left: 30rpx;
}

.title_portrait {
  width: 88rpx;
  height: 88rpx;
  border-radius: 100%;
  overflow: hidden;
}

.title_info {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.title_name {
  height: 42rpx;
  line-height: 42rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
}

.title_date {
  height: 28rpx;
  font-size: 22rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(114, 114, 114, 1);
  line-height: 28rpx;
}

.slide_image {
  width: 100%;
  height: 460rpx;
}

.tag_cover {
  margin-top: 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 690rpx;
  margin-left: 30rpx;
  flex-wrap: wrap;
}

.tag_item {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 40rpx;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
}

.content_cover {
  width: 690rpx;
  margin-left: 30rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 33rpx;
  display: block;
}

.commodity_cover {
  width: 690rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  padding-bottom: 50rpx;
  border-bottom: 1rpx dotted #bdc1c5;
}

.commodity_title {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  line-height: 40rpx;
}

.commodity_item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 100%;
  height: 298rpx;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(189, 193, 197, 1);
  margin-top:20rpx;
}

.commodity_img {
  width: 282rpx;
  height: 298rpx;
}

.commodity_info {
  padding: 37rpx 25rpx;
  position: relative;
  width: 360rpx;
}

.commodity_label {
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 33rpx;
  margin-bottom: 10rpx;
}

.coupon_btn {
  position: absolute;
  bottom: 64rpx;
  right: 20rpx;
  width: 200rpx;
  height: 66rpx;
  line-height: 66rpx;
  background: rgba(254, 232, 103, 1);
  border-radius: 38rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  text-align: center;
  border: none;
}

.coupon_btn::after {
  border: none;
  outline: none;
}

.coupon_text {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(183, 183, 183, 1);
  line-height: 28rpx;
}

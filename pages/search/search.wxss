.search_cover {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search_bar {
  width: 520rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(0, 0, 0, 0.16);
  border-radius: 36rpx;
  padding-left: 92rpx;
  font-size: 28rpx;
  margin-left: 30rpx;
}

.search_holder {
  width: 465rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(178, 178, 178, 1);
  line-height: 40rpx;
}

.search_icon {
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  top: 18rpx;
  left: 64rpx;
}

.search_cancel {
  width: 56rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(178, 178, 178, 1);
  line-height: 40rpx;
  margin-left: 22rpx;
}

.keyword_cover {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 25rpx;
  padding-left: 30rpx;
}

.key_hot {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 2, 2, 1);
}

.key_header {
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
  margin-left: 12rpx;
}

.keyword_list {
  width: 690rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.keyword {
  background: rgba(255, 251, 226, 1);
  border-radius: 27px;
  padding: 13rpx 40rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  text-align: center;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
